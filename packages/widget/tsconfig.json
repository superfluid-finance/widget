{
  "extends": "tsconfig/base.json",
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true
  }
}

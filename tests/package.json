{
  "name": "tests",
  "version": "0.0.3",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@currents/playwright": "^0.8.1",
    "@playwright/test": "^1.41.1",
    "@superfluid-finance/metadata": "^1.1.23",
    "@superfluid-finance/tokenlist": "^3.3.2",
